# Application Configuration
PORT=8080
DEBUG=false
APP_NAME=LogSense AI

# Machine Learning
ML_CONFIDENCE_THRESHOLD=0.85
ML_ANOMALY_RATIO=0.1
ML_MIN_SAMPLES=50
ML_MODEL_PATH=/tmp/models

# API Configuration
API_KEY=
ENABLE_AUTH=false

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","https://*.run.app"]

# Optional: Redis for caching
REDIS_URL=
CACHE_TTL=3600

# Optional: MongoDB for persistent storage
MONGODB_URL=
DATABASE_NAME=logsense

# Cloud Run Specific
CLOUD_RUN=false
GCP_PROJECT_ID=
GCP_REGION=us-central1

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics